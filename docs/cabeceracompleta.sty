\renewcommand{\headheight}{15pt}

\newcommand*\tikzheadeven{%
\begin{tikzpicture}[remember picture,overlay]
\node[yshift=-2cm] at (current page.north west)
{\begin{tikzpicture}[remember picture, overlay]
\fill[Color1 Color2
] (0,-0.1cm) rectangle
(\paperwidth,0.1cm);
\ifthenelse{\equal{\rightmark}{}}{}{
